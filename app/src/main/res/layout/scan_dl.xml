<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/owncloud_blue_accent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lavel_top"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:text="Transport Department Government of Delhi"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lavel_top1"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:text="Licence to Drive Vehicles Throughout India"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center"
           />
        
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="100">
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:id="@+id/dl_auth"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:text="Authorisation to Drive"
                android:gravity="start"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:id="@+id/yn"
                android:text="(P) N"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:id="@+id/doi"
                android:text="Date of Issue"
                android:gravity="center"/>
                
         </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:id="@+id/dl_authid"
                android:padding="5dp"
                android:text="INVCRG"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:gravity="left"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:id="@+id/ynid"
                android:text="BJ: U"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:id="@+id/doid"
                android:text="01/03/20111"
                android:gravity="center"/>
         </LinearLayout>
         <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray"/>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="100">
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:id="@+id/lno"
                android:padding="5dp"
                android:text="Licence No."
                android:layout_marginLeft="5dp"
                android:gravity="start"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text=":"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="start"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:id="@+id/lnoid"
                android:text="DL-0420110149646"
                android:gravity="start"/>
         </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:id="@+id/name"
                android:padding="5dp"
                android:text="Name"
                android:layout_marginLeft="5dp"
                android:gravity="start"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text=":"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="start"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:id="@+id/nameid"
                android:text="ANURAG BAREJA"
                android:gravity="start"/>
         </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:id="@+id/sw"
                android:padding="5dp"
                android:text="S/W/D"
                android:layout_marginLeft="5dp"
                android:gravity="start"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text=":"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="start"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:id="@+id/swid"
                android:text="BODH RAJ BAREJA"
                android:gravity="start"/>
         </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:id="@+id/add"
                android:padding="5dp"
                android:text="Address"
                android:layout_marginLeft="5dp"
                android:gravity="start"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text=":"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="start"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:id="@+id/addid"
                android:layout_marginBottom="5dp"
                android:text="HNO-178 A2/B MIG FLATS PASCHIN VIHAR ,DELHI 110063"
                android:gravity="start"/>
         </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/owncloud_blue_accent"
            android:weightSum="100">
             <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:id="@+id/valid"
                android:text="Validity:"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="start"/>
             <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:id="@+id/val_id"
                android:text="08/02/2016"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="start"/>
             <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:id="@+id/inv"
                android:textSize="18sp"
                android:gravity="end"
                android:text="Inv Carr No:"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                />
             <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:id="@+id/naid"
                android:text="NA"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:gravity="start"
                android:textColor="#fff"
                />
             
            </LinearLayout>
           
         </LinearLayout>
         <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/naida"
                android:text="*Go back to scan another QR code"
               
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:textColor="#000"
                />
    

</LinearLayout>
